@model Cinema
@{
    ViewData["Title"] = "Update Cinemas";
}

<div class="row text ">

    <div class="col-md-8 offset-2">
       <p class="text center">
        <h1>Update Cinemas</h1>
    </p>
    <div class="row">
        <div class="col-md-8 offset-2">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                            <div class="form-gruop" >
                                <div class="form-group text-center">
                                    <img id="ProfilePicturePreview" />
                                </div>
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-gruop" >
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-gruop" >
                <label asp-for="Descritpion" class="control-label"></label>
                <input asp-for="Descritpion" class="form-control" />
                <span asp-validation-for="Descritpion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-success float-right"  />
                <a class="btn btn-secondary" asp-action="Index">Show All </a>
            </div>
            </form>

        </div>
    </div>

    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = documen.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>

}