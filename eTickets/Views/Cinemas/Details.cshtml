@model Cinema
@{
    ViewData["Title"] = "Cinema Details";
}

<div class="row text ">

    <div class="col-md-8 offset-2">
       <p class="text center">
        <h1>Details for @Model.Name</h1>
    </p>
    <div class="row">
        <div class="col-md-8 offset-2">

            
                <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                            <div class="form-gruop" >
                                <div class="form-group text-center">
                                    <img class="rounded-circle" id="ProfilePicturePreview" />
                                </div>
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" readonly />
                
            </div>
            <div class="form-gruop" >
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-gruop" >
                <label asp-for="Descritpion" class="control-label"></label>
                <input asp-for="Descritpion" class="form-control" readonly />
            </div>
            <div class="form-group">
                    @{
                        if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                             <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        else{
                            <a class="btn btn-secondary" asp-action="Index">Show All </a>
                        }
                    }
               
                
            </div>
            

        </div>
    </div>

    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePictureURL").val();
        })

    </script>

}