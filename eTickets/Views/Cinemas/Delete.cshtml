@model Cinema
@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text ">

    <div class="col-md-8 offset-2">
       <p class="text center">
        <h1>Delete confirmation for @Model.Name</h1>
    </p>
    <div class="row">
        <div class="col-md-8 offset-2">

            
                <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                            <div class="form-gruop" >
                                <div class="form-group text-center">
                                    <img class="rounded-circle" id="ProfilePicturePreview" />
                                </div>
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" readonly />
                
            </div>
            <div class="form-gruop" >
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-gruop" >
                <label asp-for="Descritpion" class="control-label"></label>
                <input asp-for="Descritpion" class="form-control" readonly />
            </div>
            <div class="form-group" style="position:absolute;">
                <form asp-action="Delete" >
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    <a class="btn btn-secondary" asp-action="Index">Show All </a>
                </form>
                
            </div>
            

        </div>
    </div>

    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#Logo").val();
        })

    </script>

}